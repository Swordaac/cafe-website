    "helmet": "^7.1.0",
    "jose": "^5.9.3",
    "mongoose": "^8.6.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
